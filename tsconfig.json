{
  "compilerOptions": {
    "alwaysStrict": true,
    "experimentalDecorators": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "./dist/",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "watch": true
  },
  "include": [
    "./src/"
  ]
}